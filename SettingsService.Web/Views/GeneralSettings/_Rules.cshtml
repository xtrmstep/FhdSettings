<div id="rules" class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Rules</h3>
    </div>
    <div class="panel-body">
        <button type="button" class="btn btn-primary">Add</button>
        <br />
        <table class="table table-hover">
            <tr>
                <th>Name</th>
                <th>DataType</th>
                <th>RegExpression</th>
                <th></th>
            </tr>
            <tbody data-bind="foreach: rules">
                <tr>
                    <td data-bind="text: Name"></td>
                    <td data-bind="text: DataType"></td>
                    <td data-bind="text: RegExpression"></td>
                    <td>
                        <button type="button" class="btn btn-default btn-sm" title="Edit"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></button>
                        <button type="button" class="btn btn-default btn-sm" title="Remove"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

